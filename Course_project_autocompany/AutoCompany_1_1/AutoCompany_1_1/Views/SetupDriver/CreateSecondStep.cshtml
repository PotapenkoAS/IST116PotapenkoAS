@model AutoCompany_1_1.Models.setupped_route
@using AutoCompany_1_1.Models;
@{
	ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("CreateSecondStep", "SetupDriver", FormMethod.Post))
{
	@Html.AntiForgeryToken()
	<div class="form-horizontal">
		<div class="form-group">
			<b class="col-md-2">First driver</b>
			<div class="col-md-10">
				@Html.DropDownList("idFirstDriver", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.idFirstDriver, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<b class="col-md-2">Second driver</b>
			<div class="col-md-10">
				@Html.DropDownList("idSecondDriver", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.idSecondDriver, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<b class="col-md-2">Conductor</b>
			<div class="col-md-10">
				@Html.DropDownList("idConductor", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.idConductor, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</div>
	</div>
}
